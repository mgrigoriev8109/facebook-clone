<%= form_with model: @comment, local: true do |form| %>
  <div>
    <%= form.hidden_field :post_id, value: post.id %>
  </div>

  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :body, 'Comment on post:' %><br>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

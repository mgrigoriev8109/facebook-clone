<div class="flex w-full sm:w-3/4 md:w-1/2 lg:w-1/2">
  <img class="w-20 h-20 rounded-full mr-4 mb-2" src="https://www.nicepng.com/png/full/270-2709350_smiley-face-black-and-white-laughing-stick-figure.png" alt="Stick Person Avatar">
  <div class="flex flex-col">
    <h1 class= "text-3xl text-gray-800 font-bold mb-2"><%= @user.username %></h1>
    <p class="text-sm text-slate-500 truncate"><%= @user.email %></p>
  </div>
</div>
<% if @user == current_user %>
  <%= render 'posts/new_post' %>
<% end %>

<% unless @user == current_user %>
  <%= render 'friendship_requests/request_friendship' %>
<% end %>

<%= render 'posts/all_posts', :posts => @posts %>

<p>This is the account page of: <%= @user.username %></p>

<% if @user == current_user %>
  <%= render 'posts/new_post' %>
<% end %>

<% unless @user == current_user %>
  <%= form_with model: @friendship_request do |form| %>
    <div>
      <%= form.hidden_field :request_recipient, value: @user.id %>
    </div>

    <div>
      <%= form.hidden_field :request_provider, value: current_user.id %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
<% end %>

<%= render 'posts/user_posts'%>
